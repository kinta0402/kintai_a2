<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month),
                         class: "btn btn-xs btn-primary" %>
        &emsp;
        【<%= l(@first_day, format: :middle) %>】勤怠管理表
        &emsp;
        <%= link_to "→", user_path(date: @first_day.next_month),
                         class: "btn btn-xs btn-primary" %>
      </td>
      <td>
        指定勤務時間：<%= format_basic_info(@user.basic_work_time) %><br>
        テスト : XXX
      </td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td>(^^)</td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %> <!-- 10.4 -->
  <%= link_to "1ヶ月の勤怠編集へ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-success" %>
  <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %>
</div>

<div>
  <table class = "table table-bordered table-striped table-condensed" id="table-attendances">
    <thead>
      <tr> <!--rowspan:縦結合、colspan：横結合-->
        <th rowspan = "4">残業申請</td>
        <th rowspan = "4">日付</th>
        <th rowspan = "4">曜日</th>
      </tr>
      <tr>
        <td colspan="8">【実績】</td>
        <td colspan="5">所定外勤務</td>
      </tr>
      <tr>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2">終了時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <%# (@first_day..@last_day).each do |day| 10.4 %>
      <% @attendances.each do |day| %>
        <tr>
          <td></td>
      <!--<td><%#= l(day, format: :short) %></td> <!-- 10.2 -->
          <td><%= l(day.worked_on, format: :short) %></td> <!-- 10.3 -->
      <!--<td><%#= $days_of_the_week[day.wday] %></td> <!-- 10.2 -->
          <td>
            <% if day.worked_on.wday == 0 %>
              <span style="color:red">日</span>
            <% elsif  day.worked_on.wday == 6 %>
              <span style="color:blue">土</span>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: "%H") if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: "%M") if day.started_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.nil? %>
              <%= link_to "出社", user_attendance_path(@user, day), method: :patch, class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: "%H") if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: "%M") if day.finished_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.present? && day.finished_at.nil? %>
              <%= link_to "退社", user_attendance_path(@user, day), method: :patch, class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td>
            <%# if day.started_at.present? && day.finished_at.present? %>
              <%#= working_times(day.started_at, day.finished_at) %> <!-- 10.8 -->
            <%# end %>
            <% if day.started_at.present? && day.finished_at.present? %> <!-- 10.9.2 -->
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <!-- ↑理解しにくいが、繰り返し処理の中で、在社時間を足していってるイメージ -->
            <% end %>
          </td>
          <td><%= day.note %></td>
          
          
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td> <!-- 10.9.1 -->
        <td colspan="2"><%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %></td>  <!-- 10.9.1 -->
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td> <!-- 10.9.2 -->
      </tr>
    </tfoot> 
  </table>
</div>