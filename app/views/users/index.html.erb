<% provide(:title, 'All Users') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザ一覧</h1>
<% end %>

<!--  検索拡張機能  -->
<p class="search-logo">ユーザー名検索</p>
  <%= form_tag(users_path, :method => 'get' ) do %>
    <div class = "input-group pull-right" id="search-block"> <!-- seach area ①たとえばこの二つのclassをinputっていう名前とは別の名前にして、再度CSSを指定する!! cssのdispay inline block等で試そう-->
      <%= text_field_tag :search %>
      <%= submit_tag '検索', :name => nil, class: "btn btn-primary" %>
    </div>   
  <% end %>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
   <div>
    <% @users.each do |user| %>
     <div>
       <% if current_user.admin? && !current_user?(user) %>
         <%= user.name %>
       <% end %>
     </div>
      <div>
        <% if current_user.admin? && !current_user?(user) %>
         <span style ="font-weight:bold">|&nbsp;</span>
           <%= link_to "削除", user, method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
        <% end %>
      </div>
      <% if current_user.admin? && !current_user?(user) %>
        <div class="jumbotron">
        
          <%= link_to "編集", edit_basic_info_user_path(user), remote: true, class: "btn btn-success" %>
        </div>
      <% end %>


    <% end %>
  </div>
  <%= will_paginate %>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>