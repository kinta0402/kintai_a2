<% provide(:title, 'All Users') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザ一覧</h1>
<% end %>

<!--  検索拡張機能  -->
<p class="search-logo">ユーザー名検索</p>
  <%= form_tag(users_path, :method => 'get' ) do %>
    <div class = "input-group pull-right" id="search-block"> <!-- seach area ①たとえばこの二つのclassをinputっていう名前とは別の名前にして、再度CSSを指定する!! cssのdispay inline block等で試そう-->
      <%= text_field_tag :search %>
      <%= submit_tag '検索', :name => nil, class: "btn btn-primary" %>
    </div>   
  <% end %>

<div class="col-md-10 col-md-offset-1">
  
   <div>
    <% @users.each do |user| %>
     <div>
         <%= user.name %>
     </div>
      <div>
         <span style ="font-weight:bold">|&nbsp;</span>
           <%= link_to "削除", user, method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
      </div>
        <div class="jumbotron">
          <a data-toggle="collapse" href="#collapse<%= user.id %>"><button type="submit" class="btn btn-lg btn-primary">編集</button></a>
            <div id="collapse<%= user.id %>" class="panel-collapse collapse">
                <%= render "user", {user: user} %>
            </div>
        </div>
    <% end %>
  </div>
  <%= will_paginate %>
</div>

